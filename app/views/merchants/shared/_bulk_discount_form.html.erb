<%= form_with model: [@merchant, @bulk_discount], local: true do |form| %>
  <%= form.label :quantity_threshold, 'Amount of item to buy:' %>
  <%= form.number_field :quantity_threshold %><br>
  <%= form.label :percentage_discount, 'Percentage discount:' %>
  <% unless @bulk_discount.percentage_discount.nil? %>
    <%= form.text_field :percentage_discount, value: @bulk_discount.display_discount_percentage %><br>
  <% else %>
    <%= form.text_field :percentage_discount %><br>
  <% end %>
  <%= form.submit %>
<% end %>